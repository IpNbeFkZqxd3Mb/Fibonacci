@page
@model FibonacciModel
@{
    ViewData["Title"] = "費氏數列計算機";
}

<h1>費氏數列計算機</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <label for="number">請輸入要計算第幾個費氏數列：</label>
                <input type="number" class="form-control" id="number" name="number" required min="0" value="@Model.Number">
            </div>
            <button type="submit" class="btn btn-primary mt-2">計算</button>
        </form>

        @if (Model.Result.HasValue)
        {
            <div class="mt-3">
                <h4>計算結果：</h4>
                <p>第 @Model.Number 個費氏數列的值是：@Model.Result</p>
            </div>
        }
    </div>
</div>